        </el-form-item>
#elseif($column.htmlType == "checkbox" && $dictType)
        <el-form-item :label="${label}" prop="${field}">
          <el-checkbox-group v-model="form.${field}">
            <el-checkbox>{{this.$i18n.t("dictGeneration")}}</el-checkbox>
          </el-checkbox-group>
        </el-form-item>
